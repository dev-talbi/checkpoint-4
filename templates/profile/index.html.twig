{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Mes injustices</h2>
            <a href="{{ path('injustice_new') }}" class="btn btn-primary">Ajouter</a>
            {% for injustice in injustices %}
            <a class="link-injustice" href="{{ path('injustice_show', {id: injustice.id}) }}">
                <div class="card card-home">
                    <div class="card-header">
                        {% for i in range(0, injustice.theme|length -1) %}
                        {{ injustice.theme[i].icon|raw }}
                        {% endfor %}
                    </div>
                    <div class="card-body">
                        <h3> {{injustice.title}}</h3>
                    </div>
                    <div class="card-footer">
                        <div class="container-edit">
                            <a href="{{ path('injustice_edit', {'id': injustice.id}) }}" type="button"
                                class="btn btn-warning"><i class="fas fa-edit"></i>
                            </a>
                            {{ include('injustice/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </a>
            {% endfor %}
        </div>
        <div class="col-md-6">
            <div class="card-profil">
                <h2>Informations Personnelles</h2>
                {% for avatar in avatars %}
                <div class="container-avatar">
                    <img class="avatar" src="{{ avatar.photo }}" alt="avatar">
                </div>
                {% endfor %}
                <div class="form-group">
                    <label for="exampleInputEmail1">Avatar</label>
                    {{ form_widget(profileForm.photo) }}
                </div>
                {{ form_start(profileForm) }}
                <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    {{ form_widget(profileForm.email) }}
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Nome</label>
                    {{ form_widget(profileForm.firstname) }}
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Pr√©nom</label>
                    {{ form_widget(profileForm.lastname) }}
                </div>
                <button class="btn btn-primary">Envoyer</button>
                {{ form_end(profileForm) }}


            </div>
        </div>
    </div>
    {% for injustice in injustices %}


    {% endfor %}

    {% endblock %}