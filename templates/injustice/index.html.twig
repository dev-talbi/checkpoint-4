{% extends 'base.html.twig' %}

{% block title %}Injustice index{% endblock %}

{% block body %}
<h1>Injustice index</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Date</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for injustice in injustices %}
        <tr>
            <td>{{ injustice.id }}</td>
            <td>{{ injustice.title }}</td>
            <td>{{ injustice.description }}</td>
            <td>{{ injustice.date ? injustice.date|date('Y-m-d') : '' }}</td>
            <td>
                <a href="{{ path('injustice_show', {'id': injustice.id}) }}">show</a>
                <a href="{{ path('injustice_edit', {'id': injustice.id}) }}">edit</a>
            </td>
        </tr>
        {{ dump(injustice) }}
        {% else %}
        <tr>
            <td colspan="5">no records found</td>
        </tr>

        {% endfor %}
    </tbody>
</table>

<a href="{{ path('injustice_new') }}">Create new</a>

{% endblock %}